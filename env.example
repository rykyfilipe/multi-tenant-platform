# Database
DATABASE_URL="postgresql://username:password@localhost:5432/ydv_db"
DIRECT_URL="postgresql://username:password@localhost:5432/ydv_db"

# Prisma Accelerate Configuration
PRISMA_ACCELERATE_URL="prisma://aws-us-east-1.prisma-data.com/__PROJECT_ID__/__ENVIRONMENT_ID__"
PRISMA_ACCELERATE_API_KEY="your-prisma-accelerate-api-key"

# NextAuth Configuration
# IMPORTANT: Update these URLs for your environment
NEXTAUTH_URL="http://localhost:3000"
# For production, use your actual domain:
# NEXTAUTH_URL="https://yourdomain.com"
# For mobile testing with ngrok:
# NEXTAUTH_URL="https://your-ngrok-url.ngrok.io"
# For LAN testing:
# NEXTAUTH_URL="http://192.168.1.100:3000"

NEXTAUTH_SECRET="your-nextauth-secret"
# Generate a strong secret: openssl rand -base64 32

# JWT Secrets (generate strong secrets for production)
JWT_SECRET="your-jwt-secret-key-here"
PUBLIC_JWT_SECRET="your-public-jwt-secret-key-here"

# CSRF Protection
CSRF_SECRET="your-csrf-secret-key-here"

# Security Configuration
ENABLE_HTTPS_REDIRECT="true"
ENABLE_HSTS="true"
ENABLE_CSP="true"
ENABLE_RATE_LIMITING="true"
ENABLE_CSRF_PROTECTION="true"

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_BLOCK_DURATION_MS="300000"

# Session Security
SESSION_MAX_AGE="7200"
SESSION_UPDATE_AGE="3600"
JWT_MAX_AGE="7200"

# Google OAuth Configuration
# Get these from: https://console.developers.google.com/
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# IMPORTANT: Configure these redirect URIs in Google Console:
# - http://localhost:3000/api/auth/callback/google (development)
# - https://yourdomain.com/api/auth/callback/google (production)
# - https://your-ngrok-url.ngrok.io/api/auth/callback/google (ngrok testing)
# - http://192.168.1.100:3000/api/auth/callback/google (LAN testing)

# Stripe Configuration
