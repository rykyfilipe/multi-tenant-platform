# Database
DATABASE_URL="postgresql://username:password@localhost:5432/ydv_db"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"

# JWT Secrets (generate strong secrets for production)
JWT_SECRET="your-jwt-secret-key-here"
PUBLIC_JWT_SECRET="your-public-jwt-secret-key-here"

# CSRF Protection
CSRF_SECRET="your-csrf-secret-key-here"

# Security Configuration
ENABLE_HTTPS_REDIRECT="true"
ENABLE_HSTS="true"
ENABLE_CSP="true"
ENABLE_RATE_LIMITING="true"
ENABLE_CSRF_PROTECTION="true"

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_BLOCK_DURATION_MS="300000"

# Session Security
SESSION_MAX_AGE="7200"
SESSION_UPDATE_AGE="3600"
JWT_MAX_AGE="7200"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Stripe Configuration
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Stripe Price IDs (create these in your Stripe dashboard)
STRIPE_FREE_PRICE_ID="price_free_..."
STRIPE_PRO_PRICE_ID="price_pro_..."
STRIPE_ENTERPRISE_PRICE_ID="price_enterprise_..."

# Email Configuration (Nodemailer)
SMTP_HOST="mail.privateemail.com"
SMTP_PORT="465"
SMTP_USER="your-main-email@yourdomain.com"
SMTP_PASS="your-main-password"

# Contact Email Credentials
SMTP_USER_CONTACT="contact@yourdomain.com"
SMTP_PASS_CONTACT="contact-password"

# No-Reply Email Credentials
SMTP_USER_NO_REPLY="no-reply@yourdomain.com"
SMTP_PASS_NO_REPLY="no-reply-password"

# Support Email Credentials
SMTP_USER_SUPPORT="support@yourdomain.com"
SMTP_PASS_SUPPORT="support-password"

# Email Addresses for different purposes
SMTP_MAIL_CONTACT="contact@yourdomain.com"
SMTP_MAIL_NO_REPLY="no-reply@yourdomain.com"
SMTP_MAIL_SUPPORT="support@yourdomain.com"
CONTACT_EMAIL="contact@ydv.com"

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Security Monitoring (optional)
SECURITY_WEBHOOK_URL="https://your-security-monitoring-service.com/webhook"
SECURITY_LOG_LEVEL="warn"
ENABLE_SECURITY_LOGGING="true"

# Production Security Settings
NODE_ENV="development"
ENABLE_DEBUG_MODE="false"
ENABLE_ERROR_DETAILS="false" 